generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String           @id @default(cuid())
  email       String           @unique
  displayName String?
  role        String           @default("user")
  memberships CalendarMember[]
  eventAttendance EventAttendee[]

  adminCalendars Calendar[] @relation("AdminCalendars")
  events         Event[] @relation("CreatedEvents")
}

model Calendar {
  id        String           @id @default(cuid())
  name      String
  events    Event[]
  members   CalendarMember[]
  admin     User             @relation("AdminCalendars", fields: [adminId], references: [id], onDelete: Restrict)
  adminId   String
  createdAt DateTime         @default(now())
}

model CalendarMember {
  id         String   @id @default(cuid())
  calendar   Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  calendarId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  joinedAt   DateTime @default(now())

  @@unique([calendarId, userId])
}

model Event {
  id          String           @id @default(cuid())
  calendar    Calendar         @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  calendarId  String
  title       String
  description String?
  attendees   EventAttendee[]
  startTime   DateTime
  endTime     DateTime
  createdBy   User             @relation("CreatedEvents", fields: [createdById], references: [id], onDelete: Restrict)
  createdById String
}

model EventAttendee {
  id          String           @id @default(cuid())
  event       Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String           
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  status      String           @default("pending")
  respondedAt DateTime?

  @@unique([eventId, userId])
}